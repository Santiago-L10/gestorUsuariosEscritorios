<Window x:Class="GestorUsuarios.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar sesión" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Usuario -->
            <RowDefinition Height="Auto"/>
            <!-- Contraseña -->
            <RowDefinition Height="Auto"/>
            <!-- Botón Iniciar -->
            <RowDefinition Height="Auto"/>
            <!-- Botón Registro -->
        </Grid.RowDefinitions>

        <!-- Usuario -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Usuario:" FontWeight="Bold"/>
            <TextBox x:Name="UsernameTextBox" Height="30" FontSize="14" Padding="5"/>
        </StackPanel>

        <!-- Contraseña -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Contraseña:" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox" Height="30" FontSize="14" Padding="5"/>
        </StackPanel>

        <!-- Botón Iniciar sesión -->
        <Button Grid.Row="2" Content="Iniciar sesión"
                Height="35"
                Background="#4CAF50"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="#4CAF50"
                Margin="0,5,0,0"
                Click="LoginButton_Click"/>

        <!-- Botón Registro 
        <Button Grid.Row="3"
                Content="¿No tienes cuenta? Registrarse"
                Background="Transparent"
                Foreground="Blue"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Click="AbrirRegistro_Click"/>-->
    </Grid>
</Window>
