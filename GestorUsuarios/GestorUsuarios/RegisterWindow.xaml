<Window x:Class="GestorUsuarios.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro" Height="491" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,5">
            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="NombreTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="Apellido:"/>
            <TextBox x:Name="ApellidoTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,5">
            <TextBlock Text="Edad:"/>
            <TextBox x:Name="EdadTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,5">
            <TextBlock Text="Correo electrónico:"/>
            <TextBox x:Name="EmailTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,5">
            <TextBlock Text="Usuario:"/>
            <TextBox x:Name="NicknameTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,5">
            <TextBlock Text="Contraseña:"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>
        </StackPanel>

        <Button Grid.Row="6" Content="Registrar"
                Margin="0,15,0,0" Height="35"
                Background="SteelBlue" Foreground="White"
                Click="Registrar_Click"/>
    </Grid>
</Window>
