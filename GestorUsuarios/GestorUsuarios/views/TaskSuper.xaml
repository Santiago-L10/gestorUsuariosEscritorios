<Page x:Class="GestorUsuarios.views.TaskSuper"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestorUsuarios.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Supervisor - Lista de Tareas">

    <Grid>
        <StackPanel Orientation="Vertical">
            <!-- Título -->
            <TextBlock Text="Revisión de Tareas (Supervisor)" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="10"/>

            <!-- Tabla de tareas -->
            <DataGrid Name="SupervisorGrid" AutoGenerateColumns="False" Height="300"
                      SelectionMode="Single" CanUserAddRows="False" ItemsSource="{Binding TaskGlobal.Tasks}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre de Tarea" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Usuario Asignado" Binding="{Binding AssignedTo}"/>
                    <DataGridTextColumn Header="Estado de Tarea" Binding="{Binding Completed}"/>
                    <DataGridTextColumn Header="Fecha Finalización" Binding="{Binding CompletedAt, StringFormat='dd/MM/yyyy HH:mm'}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
