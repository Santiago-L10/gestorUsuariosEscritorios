<Window x:Class="GestorUsuarios.views.UpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorUsuarios.views"
        mc:Ignorable="d"
        Title="Actualizar Usuario" Height="450" Width="800">

    <Grid Margin="20">
        <!-- Definimos columnas para organizar los elementos -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Definimos filas para cada elemento -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Nombre -->
        <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="NombreTextBox" Grid.Row="0" Grid.Column="1" Width="250" Margin="5"/>

        <!-- Apellido -->
        <TextBlock Text="Apellido:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="ApellidoTextBox" Grid.Row="1" Grid.Column="1" Width="250" Margin="5"/>

        <!-- Correo -->
        <TextBlock Text="Correo:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CorreoTextBox" Grid.Row="2" Grid.Column="1" Width="250" Margin="5"/>

        <!-- Edad -->
        <TextBlock Text="Edad:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="EdadTextBox" Grid.Row="3" Grid.Column="1" Width="250" Margin="5"/>


        <!-- Estado (ComboBox en lugar de CheckBox) -->
        <TextBlock Text="Estado:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="EstadoComboBox" Grid.Row="5" Grid.Column="1" Width="250" Margin="5">
            <ComboBoxItem Content="Activo"/>
            <ComboBoxItem Content="Inactivo"/>
        </ComboBox>

        <!-- Rol (Nuevo campo agregado) -->
        <TextBlock Text="Rol:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="RolComboBox" Grid.Row="6" Grid.Column="1" Width="250" Margin="5">
            <ComboBoxItem Content="Administrador"/>
            <ComboBoxItem Content="Supervisor"/>
            <ComboBoxItem Content="Usuario"/>
        </ComboBox>

        <!-- Botón Guardar -->
        <Button Content="Guardar"
                Grid.Row="7" Grid.ColumnSpan="2"
                Width="150"
                Margin="10"
                HorizontalAlignment="Center"
                Click="UpdateInfoUser"/>
    </Grid>
</Window>
