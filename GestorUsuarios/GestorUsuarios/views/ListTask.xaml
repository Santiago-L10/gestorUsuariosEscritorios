<Page x:Class="GestorUsuarios.views.ListTask"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestorUsuarios.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lista de Tareas">

    <Grid>
        <StackPanel Orientation="Vertical">
            <!-- Título -->
            <TextBlock Text="Lista de Tareas" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="10"/>

            <!-- Tabla de tareas -->
            <DataGrid Name="TareasGrid" AutoGenerateColumns="False" Height="300"
                      SelectionMode="Single" CanUserAddRows="False" ItemsSource="{Binding Tasks}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre de Tarea" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Estado de Tarea" Binding="{Binding Completed}"/>
                    <DataGridCheckBoxColumn Header="Completar tarea" Binding="{Binding Completed}"/>
                    <DataGridTextColumn Header="Especificaciones" Binding="{Binding Specifications}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Botón de guardar (deshabilitado por defecto) -->
            <Button Content="Guardar Cambios" Width="150" Height="40" 
        HorizontalAlignment="Center" Margin="10"
        Name="GuardarButton" Click="SaveTaks"/>

        </StackPanel>
    </Grid>
</Page>

